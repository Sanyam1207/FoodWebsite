<% layout("/layouts/boilerplate") %>
<body class="">

    <!-- <form action="/listings/new", method="get">
        <button>Add new Dish !!</button>
    </form> -->
    <h3 class="text-2xl text-neutral-600 ml-16 border-b-2 border-neutral-400">Menu</h3>
    <div class="flex flex-row flex-wrap justify-center">
        
        <% for(let listing of allListing) { %>
            <a href="/listings/<%= listing._id %>">
                <div class="max-w-sm rounded overflow-hidden shadow-lg m-3 hover:opacity-80">
                <img class="w-64 h-64 text-center" src="<%= listing.image.url %>" alt="Sunset in the mountains">
                <div class="px-6 py-4">
                <div class="font-bold text-xl mb-1"><%= listing.title %></div>
                <p class="text-gray-500">
                <%= listing.description %>
                </p>
                <p>
                    <%= listing.price.toLocaleString("en-IN") %>
                </p>  
                </div>
            </a>
        </div>
        <% } %>
    </div>

    
</body>
